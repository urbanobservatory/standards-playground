{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://urbanobservatory.github.io/standards/latest/schema/core/Pagination.json",

  "title": "Pagination",
  "type": "object",

  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "prev": {
          "$ref": "#/definitions/pagination"
        },
        "current": {
          "$ref": "#/definitions/pagination"
        },
        "next": {
          "$ref": "#/definitions/pagination"
        }
      },
      "required": [
        "current"
      ]
    }
  },

  "links": [
    {
      "rel": "self",
      "href": "{?offset,limit}",
      "templateRequired": [
        "offset",
        "limit"
      ],
      "templatePointers": {
        "offset": "/meta/current/offset",
        "limit": "/meta/current/limit"
      }
    },
    {
      "rel": "prev",
      "href": "{?offset,limit}",
      "templateRequired": [
        "offset",
        "limit"
      ],
      "templatePointers": {
        "offset": "/meta/prev/offset",
        "limit": "/meta/current/limit"
      }
    },
    {
      "rel": "next",
      "href": "{?offset,limit}",
      "templateRequired": [
        "offset",
        "limit"
      ],
      "templatePointers": {
        "offset": "/meta/next/offset",
        "limit": "/meta/current/limit"
      }
    }
  ],

  "definitions": {
    "pagination": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "pattern": "CollectionPointer$"
        },
        "offset": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50,
          "default": 10
        }
      }
    }
  }
}
